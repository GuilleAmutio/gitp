{
  "name": "gitp",
  "version": "1.0.3",
  "main": "dist/index.js",
  "bin": {
    "gitp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "link": "npm link",
    "start": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build && chmod +x dist/index.js",
    "cleanup": "rm -f ~/.gitp",
    "prepublishOnly": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "description": "Git profile manager CLI tool",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fuzzy-search": "^3.2.1",
    "inquirer": "^12.1.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/fuzzy-search": "^2.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.9.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "git",
    "profile",
    "cli"
  ],
  "author": "Guilermo Amutio",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guileamutio/gitp.git"
  },
  "bugs": {
    "url": "https://github.com/guileamutio/gitp/issues"
  },
  "homepage": "https://github.com/guileamutio/gitp#readme"
}
